@page
@model FilmUpMovie.Pages.Combos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Combo Item</h1>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <h4>Combo Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.IsOnSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Combo.IsOnSale)
        </dd>

        <!-- Displaying the combo image as a thumbnail -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Combo.ComboImage)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Combo.ComboImage != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Combo.ComboImage)" alt="Combo Image" class="img-thumbnail" style="width: 150px; height: auto;" />
            }
            else
            {
                <span class="text-muted">No Image Available</span>
            }
        </dd>
    </dl>

    <!-- Delete form -->
    <form method="post">
        <input type="hidden" asp-for="Combo.Combo_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <!-- Link to go back to the combo list -->
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>
