@page
@model FilmUpMovie.Pages.Blogging.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Movie Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white">

    <div class="container py-5" style="min-height: 80vh;">
        <h1 class="display-4 text-center text-black-50">Edit Blog</h1>
        <h4 class="text-center text-black-50 mb-4">Edit your blog details below</h4>
        <hr class="my-4" />

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Blog.Id" />

                    <!-- Blog Title Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Blog.Title" class="control-label text-dark"></label>
                        <input asp-for="Blog.Title" class="form-control" placeholder="Enter blog title" />
                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                    </div>

                    <!-- Blog Content Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Blog.Content" class="control-label text-dark"></label>
                        <textarea asp-for="Blog.Content" class="form-control" rows="6" placeholder="Enter blog content"></textarea>
                        <span asp-validation-for="Blog.Content" class="text-danger"></span>
                    </div>

                    <!-- Blog Date Posted Input -->
                    <div class="form-group mb-3">
                        <label asp-for="Blog.DatePosted" class="control-label text-dark"></label>
                        <input asp-for="Blog.DatePosted" class="form-control" type="date" />
                        <span asp-validation-for="Blog.DatePosted" class="text-danger"></span>
                    </div>

                    <!-- Display current image if available -->
                    @if (!string.IsNullOrEmpty(Model.Blog.ImageUrl))
                    {
                        <div class="form-group mb-3">
                            <label class="text-dark">Current Image:</label>
                            <img src="@Model.Blog.ImageUrl" alt="Blog Image" style="width:200px; height:auto; border-radius: 10px;" />
                        </div>
                    }

                    <!-- File upload field for new image -->
                    <div class="form-group mb-3">
                        <label for="ImageUpload" class="control-label text-dark">Change Image</label>
                        <input type="file" id="ImageUpload" name="ImageUpload" class="form-control" />
                    </div>

                    <!-- Save button -->
                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-info btn-lg w-100" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-page="./Index" class="btn btn-warning btn-lg">Back to Blog List</a>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

<style>
    /* Updated body to include flex layout */
    body {
        background-color: #007bff; /* Blue background */
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensures the body takes at least the full screen height */
    }

    /* Updated .container with margin and flex-grow */
    .container {
        background-color: lightblue;
        border-radius: 8px;
        padding: 20px;
        flex-grow: 1;
        margin-bottom: 80px; /* Prevents overlap with footer */
    }

    /* Added footer styles to ensure it's at the bottom */
    .footer {
        background-color: #333;
        color: white;
        padding: 20px;
        text-align: center;
        margin-top: auto; /* Ensures footer stays at the bottom */
    }

    /* Other styles remain unchanged */
    h1.display-4, h4 {
        color: #f8f9fa; /* Light color for headings */
    }

    .btn {
        border-radius: 5px;
        font-weight: bold;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #f39c12;
    }

        .btn-warning:hover {
            background-color: #f39c12;
            border-color: #e67e22;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #138496;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #0c6f82;
        }

    .form-group label {
        font-weight: bold;
    }

    .form-group input,
    .form-group textarea {
        border-radius: 8px;
        border: 1px solid #5f9ea0; /* Light cyan border */
    }

    .form-group textarea {
        resize: vertical;
    }

    .my-4 {
        border-top: 2px solid #f8f9fa;
    }

    .form-control {
        font-size: 1.1rem;
        padding: 0.75rem;
    }

    /* Adjusted for smaller current image */
    .form-group img {
        width: 200px; /* Smaller size for current image */
        height: auto;
        border-radius: 10px;
    }

    .form-group input, .form-group textarea {
        border-radius: 8px;
        border: 1px solid #5f9ea0;
    }

    .form-group label {
        font-weight: bold;
    }


</style>
