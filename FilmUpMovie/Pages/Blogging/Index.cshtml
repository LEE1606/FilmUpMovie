@page
@model FilmUpMovie.Pages.Blogging.IndexModel

@{
    ViewData["Title"] = "Movie Blog - Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Add Bootstrap or your custom CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white">

    <div class="container py-5">
        <h1 class="display-4 text-center text-light">Movie Blog</h1>
        <h4 class="text-center text-light mb-4">Your go-to place for movie reviews and updates!</h4>
        <hr class="my-4" />

        <!-- Search Form -->
        <form method="get" class="mb-5">
            <div class="input-group">
                <input type="text" name="SearchString" value="@Model.SearchString" class="form-control fs-4" placeholder="Search by title..." />
                <button type="submit" class="btn btn-warning fs-4">Search</button>
            </div>
        </form>

        <!-- Table of Blogs -->
        <div class="table-responsive">
            <table class="table table-dark table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Blog[0].Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Blog[0].Content)</th>
                        <th>@Html.DisplayNameFor(model => model.Blog[0].DatePosted)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Blog)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Content)</td>
                            <td>@Html.DisplayFor(modelItem => item.DatePosted)</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Create New Blog Post Link -->
        <div class="text-center mt-4">
            <a asp-page="Create" class="btn btn-lg btn-success px-5 py-3">Create New Post</a>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

<style>
    body {
        background-color: #0d6efd; /* Blue background */
    }

    h1.display-4, h4 {
        color: #f0ad4e; /* Golden color for headings */
    }

    .btn {
        border-radius: 5px;
        font-weight: bold;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border-color: #f39c12;
    }

        .btn-warning:hover {
            background-color: #f39c12;
            border-color: #e67e22;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #138496;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #0c6f82;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #c82333;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #a71d2a;
        }

    .table {
        background-color: #1c1c1c;
        color: white;
        border-radius: 8px;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #333;
    }

    .table thead {
        background-color: #0d6efd;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .form-group label {
        font-weight: bold;
    }

    .input-group input {
        border-radius: 8px;
    }

    .my-4 {
        border-top: 2px solid #f0ad4e;
    }
</style>
