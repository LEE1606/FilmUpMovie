@page
@model FilmUpMovie.Pages.Blogging.CreateModel

@{
    ViewData["Title"] = "Create Blog Post";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Add Bootstrap or your custom CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body class="bg-dark text-white">

    <div class="container py-5">
        <h1 class="display-4 text-center">Create Your Movie Blog Post</h1>
        <h4 class="text-center text-light">Add a new blog post about the latest movies!</h4>
        <hr class="my-4" />

        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Title -->
                    <div class="form-group mb-4">
                        <label asp-for="Blog.Title" class="form-label fs-4 text-light">Blog Title</label>
                        <input asp-for="Blog.Title" class="form-control fs-4 p-3" placeholder="Enter the title of your blog post" />
                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                    </div>

                    <!-- Content -->
                    <div class="form-group mb-4">
                        <label asp-for="Blog.Content" class="form-label fs-4 text-light">Blog Content</label>
                        <textarea asp-for="Blog.Content" class="form-control fs-4 p-3" rows="6" placeholder="Write about the movie here..."></textarea>
                        <span asp-validation-for="Blog.Content" class="text-danger"></span>
                    </div>

                    <!-- Date Posted -->
                    <div class="form-group mb-4">
                        <label asp-for="Blog.DatePosted" class="form-label fs-4 text-light">Date Posted</label>
                        <input asp-for="Blog.DatePosted" class="form-control fs-4 p-3" type="date" />
                        <span asp-validation-for="Blog.DatePosted" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group mb-4">
                        <label for="ImageUpload" class="form-label fs-4 text-light">Upload Movie Poster</label>
                        <input type="file" id="ImageUpload" name="ImageUpload" class="form-control fs-4" />
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-lg btn-primary px-5 py-3" />
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-page="Index" class="btn btn-secondary px-4 py-2">Back to Blog List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    body {
        background-color: #1a1a1a; /* Dark background */
        color: white;
    }

    h1.display-4, h4 {
        color: #007bff; /* Blue color for the title and subtitle */
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 8px;
        background-color: lightgray; /* Dark background for form fields */
        color: white;
        border: 1px solid #444;
    }

        .form-control:focus {
            border-color: #007bff; /* Blue border on focus */
            background-color: lightblue; /* Darker background on focus */
        }

    .btn-primary {
        background-color: #007bff; /* Blue background for the button */
        border-color: #0056b3;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #007bff;
        border-color: #0056b3;
    }

        .btn-secondary:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #004085;
        }

    textarea {
        background-color: #222; /* Dark background for textarea */
    }

    hr.my-4 {
        border-top: 2px solid #007bff; /* Blue line for the divider */
    }
</style>
