@page
@model FilmUpMovie.Pages.ShowRooms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ShowRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ShowRoom.ShowRoomID" />
            <div class="form-group">
                <label asp-for="ShowRoom.Cinema.Name" class="control-label"></label>
                <select asp-for="ShowRoom.CinemaID" class="form-control" asp-items="ViewBag.CinemaName"></select>
                <span asp-validation-for="ShowRoom.CinemaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowRoom.RoomNum" class="control-label"></label>
                <input asp-for="ShowRoom.RoomNum" class="form-control" />
                <span asp-validation-for="ShowRoom.RoomNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowRoom.TotalSeat" class="control-label"></label>
                <input asp-for="ShowRoom.TotalSeat" class="form-control" />
                <span asp-validation-for="ShowRoom.TotalSeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowRoom.Experience" class="control-label"></label>
                <input asp-for="ShowRoom.Experience" class="form-control" />
                <span asp-validation-for="ShowRoom.Experience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
