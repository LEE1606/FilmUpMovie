@page
@model FilmUpMovie.Pages.LeaveApplications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LeaveApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaveApplication.ID" />
            <div class="form-group">
                <label asp-for="LeaveApplication.LeaveAppTime" class="control-label"></label>
                <input asp-for="LeaveApplication.LeaveAppTime" class="form-control" />
                <span asp-validation-for="LeaveApplication.LeaveAppTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveApplication.LeaveAppDate" class="control-label"></label>
                <input asp-for="LeaveApplication.LeaveAppDate" class="form-control" />
                <span asp-validation-for="LeaveApplication.LeaveAppDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveApplication.LeaveAppReason" class="control-label"></label>
                <input asp-for="LeaveApplication.LeaveAppReason" class="form-control" />
                <span asp-validation-for="LeaveApplication.LeaveAppReason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaveApplication.StaffID" class="control-label"></label>
                <select asp-for="LeaveApplication.StaffID" class="form-control" asp-items="ViewBag.StaffID"></select>
                <span asp-validation-for="LeaveApplication.StaffID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
