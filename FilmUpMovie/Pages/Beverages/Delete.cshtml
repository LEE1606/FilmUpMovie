@page

@model FilmUpMovie.Pages.Beverages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Beverage Item</h1>

<h3>Are you sure you want to delete this item?</h3>

<div>
    <h4>Beverage Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.IsNewArrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.IsNewArrival)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.IsOnSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.IsOnSale)
        </dd>

        <!-- Displaying the food image as a thumbnail -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.BeverageImage)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Beverage.BeverageImage != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Beverage.BeverageImage)" alt="Food Image" class="img-thumbnail" style="width: 150px; height: auto;" />
            }
            else
            {
                <span class="text-muted">No Image Available</span>
            }
        </dd>
    </dl>
    
    <!-- Delete form -->
    <form method="post">
        <input type="hidden" asp-for="Beverage.B_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <!-- Link to go back to the food list -->
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

