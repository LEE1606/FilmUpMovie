@page
@model FilmUpMovie.Pages.Beverages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Beverage Details</h1>

<div>
    <h4>Beverage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.Category)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.IsNewArrival)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.IsNewArrival)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.IsOnSale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beverage.IsOnSale)
        </dd>

        <!-- Image display -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beverage.BeverageImage)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Beverage.BeverageImage != null)
            {
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Beverage.BeverageImage)" alt="Beverage Image" class="img-thumbnail" style="width: 150px; height: auto;" />
            }
            else
            {
                <span class="text-muted">No Image Available</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Beverage?.B_ID" class="btn btn-warning">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>