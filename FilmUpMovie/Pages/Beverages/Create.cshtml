@page
@model FilmUpMovie.Pages.Beverages.CreateModel

@{
    ViewData["Title"] = "Create Beverage";
}

<h1>Create Beverage</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BeverageViewModel.Name" class="control-label"></label>
        <input asp-for="BeverageViewModel.Name" class="form-control" />
        <span asp-validation-for="BeverageViewModel.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BeverageViewModel.Price" class="control-label"></label>
        <input asp-for="BeverageViewModel.Price" class="form-control" />
        <span asp-validation-for="BeverageViewModel.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BeverageViewModel.Description" class="control-label"></label>
        <input asp-for="BeverageViewModel.Description" class="form-control" />
        <span asp-validation-for="BeverageViewModel.Description" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="BeverageViewModel.IsNewArrival" /> New Arrival
        </label>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="BeverageViewModel.IsOnSale" /> On Sale
        </label>
    </div>

    <div class="form-group">
        <label asp-for="BeverageViewModel.ImageFile" class="control-label"></label>
        <input asp-for="BeverageViewModel.ImageFile" type="file" class="form-control" />
        <span asp-validation-for="BeverageViewModel.ImageFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

